<section class="round">
	<table>
	<header>
<h1>
	Home
</h1>
<nav class="round">	
<ul>
	<li>
	<%= link_to "Show", @post %> |
    <%= link_to "View All", posts_path %> |
	<%= link_to "New Post", new_post_path %>
	</li>
</ul>	
</nav>
</header>
<br />
<br />
<div class="apple_pagination round">
<%= will_paginate @posts %>
</div>

<% for post in @posts %>

	<div class="main">
	
	<h1>	<%= link_to post.title, post%> </h1>
		
		</div>
		<p class="content">			
			<%= post.content.html_safe %>
			<br /><br />
			<%= link_to "Edit", edit_post_path(post) %> | <%= link_to "Destroy", post, :confirm => 'Are you sure?', :method => :delete %>
		</p>
		

<% end %>


</table>

</section>
<footer>
<nav class="round">	
<span style="">	
<ul>
	<li>
	<%= link_to "Show", @post %> |
    <%= link_to "View All", posts_path %> |
	<%= link_to "New Post", new_post_path %>
	</li>
</ul>
</span>	
</nav>
</footer>